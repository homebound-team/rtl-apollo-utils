{
  "name": "@homebound/rtl-apollo-utils",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "yarn build",
    "test": "jest",
    "format": "prettier --write 'src/**/*.{ts,js,tsx,jsx}'",
    "semantic-release": "semantic-release",
    "watch-rtl-utils": "npx copy-and-watch --watch ../rtl-utils/build/ ./node_modules/@homebound/rtl-utils/build/"
  },
  "peerDependencies": {
    "@apollo/client": ">=3",
    "@homebound/better-apollo-mocked-provider": ">=1",
    "@homebound/rtl-utils": ">=2",
    "react": ">=16"
  },
  "dependencies": {
    "@homebound/better-apollo-mocked-provider": "^1.12.0"
  },
  "devDependencies": {
    "@apollo/client": "^3.7.10",
    "@homebound/rtl-utils": "^2.63.0",
    "@homebound/tsconfig": "^1.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.28",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^3.0.9",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^20.1.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn build"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "packageManager": "yarn@3.6.3"
}
